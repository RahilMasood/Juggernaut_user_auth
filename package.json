{
  "name": "vertiapi",
  "version": "1.0.0",
  "description": "Audit software API with user authentication and engagement management",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "setup": "node scripts/setup.js",
    "setup-db": "node scripts/setup-db.js",
    "migrate": "node migrations/migrate.js",
    "migrate-add-is-default": "node migrations/migrate-add-is-default.js",
    "migrate-add-no-users": "node migrations/migrate-add-no-users.js",
    "migrate-add-pending-status": "node migrations/migrate-add-pending-status.js",
    "seed-admin": "node scripts/seed-admin.js",
    "create-firm": "node scripts/create-firm.js",
    "verify": "node scripts/verify.js",
    "init": "npm run setup && npm run setup-db && npm run migrate && npm run seed-admin",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f api",
    "docker:migrate": "docker-compose exec api npm run migrate",
    "docker:seed": "docker-compose exec api npm run seed-admin",
    "docker:init": "docker-compose up -d && sleep 10 && npm run docker:migrate && npm run docker:seed",
    "generate-secrets": "node scripts/generate-secrets.js",
    "railway:start": "npm run migrate && npm start"
  },
  "keywords": ["audit", "financial", "api", "authentication"],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.2",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "joi": "^17.11.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "nodemailer": "^6.9.7",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "crypto": "^1.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  }
}

